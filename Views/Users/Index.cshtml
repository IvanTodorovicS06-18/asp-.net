@model  List<Rvas_ispit_projekat.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />
<h2>Index</h2>
<h3>Add a new User: @Html.ActionLink("Add", "New", "Users", null, new { @class = "btn btn-primary" })</h3>
@if (!Model.Any())
{
    <p> We dont have any users yet</p>
}
else
{




    <table class="table table-bordered table-hover text-center" id="User">
        <thead>
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Last name</th>
                <th class="text-center">Email </th>
                <th class="text-center">Phone</th>
                <th class="text-center">Adress</th>
                <th class="text-center">Details </th>
                <th class="text-center">Edit </th>
                <th class="text-center">Delete </th>

            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.name</td>
                <td>@item.lastname</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.adress</td>
                <td>
                    @Html.ActionLink("Details", "UserDetails", "Users", new { id = item.id }, null)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Users", new { id = item.id }, null)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Users", new { id = item.id }, new { onclick = "return confirm('Do you really want to delete the User: " + item.name + "?')" })
                </td>

            </tr>



            }
        </tbody>


    </table>
    @section scripts{
        <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js" type="text/javascript"></script>
        <script>

        $(document).ready(function () {
            $('#User').DataTable();
        });


        </script>



    }
}
